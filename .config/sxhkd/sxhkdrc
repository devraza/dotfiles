## --------- Terminal Emulator ##

# Terminal (kitty)
super + Return
	alacritty

# Terminal (floating)
super + shift + Return
	bspc rule -a \* -o state=floating rectangle=1400x1000+32+108 && $@ | alacritty

# Terminal (rxfetch)
super + ctrl + Return
	bspc rule -a '*' -o state=floating rectangle=800x532+2170+108 | alacritty --hold -e rxfetch

## --------- Screenshot/Colorpicker ##

super + shift + A
    scrot 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/screenshots && mv $f ~/screenshots && xclip -selection clipboard -t image/png -i ~/screenshots/`ls -1 -t ~/screenshots | head -1`'

super + shift + S
    scrot -s -f 'screenshot_%Y%m%d_%H%M%S.png' -e 'mkdir -p ~/screenshots && mv $f ~/screenshots && xclip -selection clipboard -t image/png -i ~/screenshots/`ls -1 -t ~/screenshots | head -1`'

# Pick a colour from the screen, uses `colorpicker` (AUR) and `xclip`
super + p
	colorpicker --short --one-shot --preview | xclip -i -selection clipboard

## --------- Playerctl (mpd w/ ncmpcpp) ##

# Previous/Next
alt + {Left,Right}
	mpc --port=6500 {prev,next}

# Play/Pause
ctrl + {Left,Right}
	mpc --port=6500 {pause,play}

## --------- Rofi ##

# Rofi App Launcher
super + space
	rofi -show drun -dpi 200

# Rofi Command Runner
super + shift + space
	rofi -show run -dpi 200

# Rofi Bluetooth Menu
super + alt + space
	rofi-bluetooth

## --------- Applications ##

# Launch Apps
super + ctrl + {b,z,d,n,a}
	{brave,zathura,discord-canary,bspc rule -a '*' -o state=floating rectangle=1000x1600+40+350 | alacritty -e ncmpcpp, aseprite}

## --------- System ##

# Brighness control
#super + shift + {Left,Right}
#	xbacklight{ -10, +10}
	
# Volume control
alt + shift + {Left,Right}
	pulseaudio-ctl{ down 10, up 10}

## --------- bspwm ##

# Close app
super + {_,shift + }c
	bspc node -{c,k}

# Kill window
super + ctrl + c
    xkill

# Reload keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + ctrl + space
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch workspace
super + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-9}'
