## --------- Terminal Emulator ##

# Terminal (kitty)
super + Return
	kitty

# Terminal (floating)
super + shift + Return
	bspc rule -a \* -o state=floating rectangle=1400x1000+0+0 && $@ | kitty

# Terminal (rxfetch)
super + ctrl + Return
	bspc rule -a '*' -o state=floating rectangle=800x620+2150+100 | kitty /home/devraza/.config/autostart/rxfetch

## --------- Screenshot/Colorpicker ##

# Select area, uses `imagemagick` and `copyq`
super + shift + s
	import ~/Pictures/screenshot.png && copyq write image/png - < ~/Pictures/screenshot.png && copyq select 0

# Pick a colour from the screen, uses `colorpicker` (AUR) and `xclip`
super + p
	colorpicker --short --one-shot --preview | xclip -i -selection clipboard

## --------- Wallpaper Switch ##

# Centered
super + shift + {d,f}
	feh --bg-fill{ /home/devraza/Pictures/wallpapers/cosmos.png, /home/devraza/Pictures/wallpapers/shaded_landscape.png}

## --------- Playerctl (mpd w/ ncmpcpp) ##

# Previous/Next
alt + {Left,Right}
	mpc --port=6500 {prev,next}

# Play/Pause
ctrl + {Left,Right}
	mpc --port=6500 {pause,play}

## --------- Rofi ##

# Rofi App Launcher
super + space
	rofi -show drun -dpi 200

# Rofi Command Runner
super + shift + space
	rofi -show run -dpi 200

# Rofi Bluetooth Menu
super + alt + space
	rofi-bluetooth

## --------- Applications ##

# Launch Apps
super + ctrl + {b,z,d,g,c,n,a}
	{brave,zathura,kitty gord,bspc rule -a '*' -o state=floating rectangle=1000x1600+40+350 | kitty gotop,bspc rule -a '*' -o state=floating rectangle=1800x300+1150+1650 | kitty cava, kitty ncmpcpp, zsh ~/.config/autostart/rice}

## --------- System ##

# Brighness control
super + shift + {Left,Right}
	xbacklight{ -10, +10}
	
# Volume control
alt + shift + {Left,Right}
	pulseaudio-ctl{ down 10, up 10}

## --------- bspwm ##

# Close app
super + {_,shift + }c
	bspc node -{c,k}

# Kill window
super + ctrl + c
    xkill

# Reload keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Quit/restart bspwm
ctrl + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
super + {h,v,q}
	bspc node -p {east,south,cancel}

# Fullscreen or Monocle
super + f
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + ctrl + space
    bspc node -t "~"{floating,tiled}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Switch workspace
super + ctrl + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Send focused window to another workspace
super + {_,shift + }{1-8}
	bspc {desktop -f,node -d} '^{1-9}'
